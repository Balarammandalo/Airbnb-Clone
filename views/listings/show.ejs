<% layout('layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3 class="text-danger">Listing Details</h3>
        </div>

        <div class="card col-6 offset-3">
            <img src="<%= listings.image %>" class="card-img-top show-image" alt="listing_image">
            <div class="card-body">
            <p class="card-text">
                <b> <%= listings.title %> </b>  <br/>
                <%= listings.description %> <br/>
                &#8377; <%= listings.price.toLocaleString("en-IN") %> <br/>
                <%= listings.location %> <br/>
                <%= listings.country %> <br/>
            </p>
            </div>
            <div class="btns">
                <form method="get"action="/listings/<%= listings._id %>/edit">
                    <button  class="btn btn-danger mb-2 mt-2 edit-btn" >Edit</button>
                </form>
                <form method="post" action="/listings/<%= listings._id %>?_method=DELETE">
                    <button  class="btn btn-dark mt-2" >Delete</button>
                </form>
            </div>
        </div>
    </div>
</body>