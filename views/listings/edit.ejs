<% layout('layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2" >
            <h3 class="text-danger">Edit Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" >

                <div class="mb-2">
                    <label for="title" class="form-label">Title: </label>
                    <input name="listing[title]" id="title" value="<%= listing.title %>" class="form-control" type="text"/> 
                </div>

                <div class="mb-2">
                    <label for="description" class="form-label">Description: </label>
                    <textarea name="listing[description]" to = "description" class="form-control"type="text"> <%= listing.description %> </textarea> 
                </div>

                <div class="mb-2 ">
                    <label for="price" class="form-label">Price: </label>
                    <input name="listing[price]" id="price" class="form-control" value="<%= listing.price %>" type="number"/> 
                </div>

                <div class="mb-2">
                    <label for="country" class="form-label">Country: </label>
                    <input name="listing[image]" class="form-control" id="country" value="<%= listing.country %>"   type="text"/> 
                </div>

                <div class="mb-2">
                    <label for="image" class="form-label">Image: </label>
                    <input name="listing[image]" class="form-control" id="image" value="<%= listing.image %>" type="text"/> 
                </div>


                <div class="mb-2">
                    <label for="location" class="form-label">Location: </label>
                    <input name="listing[location]" class="form-control" id="location" value="<%= listing.location %>" type="text"/> 
                </div>
                
                <button class="btn btn-danger mt-3 mb-3">Save</button>
            </form>
        </div>
    </div>
    
</body>