<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="col-6 offset-3">Login Form</h1>
    <div class="col-7 offset-3" >
        <form method="post" action="/login"  novalidate class="needs-validation">
            <div class="mb-2 mt-4">
                <label for="username" class="form-label">Username </label>
                <input name="username" id="username" class="form-control" type="text" required/> 
                
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password </label>
                <input name="password" id="password" class="form-control" type="password" required/> 
                
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>
