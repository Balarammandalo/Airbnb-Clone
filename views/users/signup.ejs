<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="col-6 offset-3">Signup for Wonderlust</h1>
    <div class="col-7 offset-3" >
        <form method="post" action="/signup"  novalidate class="needs-validation">
            <div class="mb-2 mt-4">
                <label for="username" class="form-label">Username </label>
                <input name="username" id="username" class="form-control" type="text" required/> 
                <div class="invalid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label for="email" class="form-label">Email </label>
                <input name="email" id="email" class="form-control" type="email" required/>                 
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password </label>
                <input name="password" id="password" class="form-control" type="password" required/> 
                <div class="invalid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>
